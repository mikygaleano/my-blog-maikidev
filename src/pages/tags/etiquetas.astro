---
const allPosts = await Astro.glob('../posts/*.md');

const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];

const { textColor } = Astro.props;

---


<div class=`tags ${textColor}`>
  <details class=`tags ${textColor}`>
    <summary>buscar por etiquetas</summary>
    <ul class="w-full flex flex-row flex-wrap">
      {tags.map((tag) => (
        <li class="tag"><a href={`/tags/${tag}`}>{tag}</a></li>
      ))}
    </ul>
  </details>
</div>


  <style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>